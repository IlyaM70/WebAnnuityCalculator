@model InputDataViewModel
@{
    ViewData["Title"] = "Калькулятор аннуитетных платежей";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<div class="container-xl mt-3">
    <form asp-controller="Home" asp-action="Index" method="post">
        <div class="d-flex justify-content-center">
            <div class="col-10 col-sm-6 col-md-3 d-flex flex-column">

                <label class="form-label">Сумма займа</label>
                <input class="form-control" type="number" value="10000"
                       asp-for="LoanAmount"/>
                <span asp-validation-for="LoanAmount" class="text-danger mt-2"></span>

                <label class="mt-3 form-label">Срок займа в месяцах</label>
                <input class="form-control" type="number" value="1"
                       asp-for="LoanTerm"/>
                <span asp-validation-for="LoanTerm" class="text-danger mt-2"></span>

                <label class="mt-3 form-label">Ставка в год</label>
                <input class="form-control" type="number" value="1"
                       asp-for="LoanRate"/>
                <span asp-validation-for="LoanRate" class="text-danger mt-2"></span>



                <button class="mt-3 btn btn-primary" type="submit">Отправить</button>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}


